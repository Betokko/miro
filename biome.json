{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "single",
            "quoteStyle": "single",
            "quoteProperties": "asNeeded",
            "semicolons": "asNeeded",
            "trailingCommas": "all",
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 120
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "a11y": "off",
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off"
            },
            "suspicious": {
                "noUnknownAtRules": "off",
                "noArrayIndexKey": "info"
            },
            "correctness": {
                "useUniqueElementIds": "info",
                "useExhaustiveDependencies": "info",
                "noUnusedFunctionParameters": "info"
            },
            "complexity": {
                "useOptionalChain": "info"
            }
        }
    }
}
